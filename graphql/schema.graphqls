"The `UploadFile, // b.txt` scalar type represents a multipart file upload."
scalar Time

# directive @auth on FIELD_DEFINITION

type FieldError {
  message: String!
  field: String!
}

interface IFormResponse {
  ok: Boolean!
  errors: [FieldError]
}

type FormResponse {
  ok: Boolean!
  errors: [FieldError]
}

type AuthResponse implements IFormResponse {
  ok: Boolean!
  errors: [FieldError]
  authToken: AuthToken
  user: User
}

type AuthToken {
  token: String!
  expiredAt: Time!
}

type User {
  id: String!
  username: String!
  email: String!
  phoneNumber: String!
  # meetups: [Meetup!]!
  createdAt: Time!
  updatedAt: Time!
}

# type Meetup {
